---
const locale = Astro.currentLocale;

import article from '../../i18n.json';
---

{article[locale].articles.map((article, i) => {
	return i % 2 === 0 ? (
		<article class="flex gap-8 mb-12">
			<div>
				<h2 class="text-2xl font-bold mb-4">{article.title}</h2>
				<p class="font-light text-base">{article.content}</p>
			</div>
			<img
				src={"../../public/images/" + article.image}
				alt={article.title}
				class="w-1/3 rounded-lg"
			/>
		</article>
	) : (
		<article class="flex gap-8 mb-12">
			<img
				src={"../../public/images/" + article.image}
				alt={article.title}
				class="w-1/3 rounded-lg"
			/>
			<div>
				<h2 class="text-2xl font-bold mb-4">{article.title}</h2>
				<p class="font-light text-base">{article.content}</p>
			</div>
		</article>
	);
})}